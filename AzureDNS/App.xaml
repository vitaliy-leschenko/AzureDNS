<Application x:Class="AzureDNS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:AzureDNS.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <system:String x:Key="appTitle">Azure DNS</system:String>
            <BooleanToVisibilityConverter x:Key="PositiveToVisibilityConverter" />
            <controls:NegativeToVisibilityConverter x:Key="NegativeToVisibilityConverter"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Brushes.xaml" />
                <ResourceDictionary Source="Resources\Button.xaml" />
                <ResourceDictionary Source="Resources\Checkbox.xaml" />
                <ResourceDictionary Source="Resources\ComboBox.xaml" />
                <ResourceDictionary Source="Resources\ListView.xaml" />
                <ResourceDictionary Source="Resources\Menu.xaml" />
                <ResourceDictionary Source="Resources\Radiobutton.xaml" />
                <ResourceDictionary Source="Resources\ScrollView.xaml" />
                <ResourceDictionary Source="Resources\Textbox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
