<Window x:Class="AzureDNS.Views.SubscriptionsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}"
        Title="Azure DNS" Height="350" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        ResizeMode="NoResize" IsEnabled="{Binding Path=IsEnabled}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Subscription:" Margin="5"/>
        <ListView Grid.Row="1" Visibility="{Binding Path=ListVisibility}"
                  ItemsSource="{Binding Path=Subscriptions}"
                  SelectedItem="{Binding Path=Current, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=SubscriptionName}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row="2" Visibility="{Binding Path=ListVisibility}" Content="Select" HorizontalAlignment="Left" Margin="5" Padding="20,5" Command="{Binding Path=SelectCommand}" />
        <ProgressBar Grid.Row="1" VerticalAlignment="Top" IsIndeterminate="True" Visibility="{Binding Path=LoadingVisibility}" />
    </Grid>
</Window>
